					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status da resposta deve ser 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Todos os comentários devem pertencer ao postId 1\", function () {\r",
							"    const responseData = pm.response.json();\r",
							"    responseData.forEach(function(comment) {\r",
							"        pm.expect(comment.postId).to.eql(1);\r",
							"    });\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
